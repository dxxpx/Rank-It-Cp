<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    <!-- Route all requests to the node process -->
    <handlers>
      <add name="iisnode" path="src/app.js" verb="*" modules="iisnode" />
    </handlers>

    <rewrite>
      <rules>
        <rule name="DynamicContent">
          <match url="/*" />
          <action type="Rewrite" url="src/app.js" />
        </rule>
      </rules>
    </rewrite>

    <!-- Logging (optional) -->
    <iisnode loggingEnabled="true" devErrorsEnabled="true" />

    <!-- Ensure node is started by iisnode -->
    <security>
      <requestFiltering removeServerHeader="true" />
    </security>
  </system.webServer>
</configuration>
